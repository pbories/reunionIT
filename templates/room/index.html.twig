{% extends 'layout.html.twig' %}

{% block page_title %}Nos salles{% endblock %}

{% block content %}

    <div class="jumbotron col-md-9 mx-auto mt-4">

        <div class="row">
            <h1 class="col-sm-9">Nos salles de r√©union</h1>

            {% if is_granted('IS_AUTHENTICATED_FULLY') and is_granted('ROLE_ADMIN') %}
                 <div class="col-sm-3">
                    <button class="btn btn-info float-right" data-toggle="tooltip" data-placement="top" title="Ajouter une salle">
                        <a class="text-white" href="{{ path('room_new') }}">
                            <i class="fas fa-plus"></i>
                        </a>
                    </button>
                </div>
            {% endif %}
        </div>

        <button type="button" onclick="displaySearch(this)" class="btn btn-info btn-lg btn-block btn-group-toggle" data-toggle="buttons">
            <i class="fas fa-search"></i>
            <i class="fas fa-angle-down" id="arrowDown"></i>
            <i class="fas fa-angle-up" id="arrowUp" style="display:none;"></i>
        </button>

        <div id="room_search" style="display:none;">
            {{ include('room/_search.html.twig')}}
        </div>

        <hr>
            <div class="row text-center" id="roomList">
                {% for room in rooms %}
                    <div class="roomCard col-lg-3 col-md-6 mb-4" style="position:relative;">
                        <div class="card mb-3" style="max-width: 18rem;">
                            <a href="{{ path('room_show', {'id': room.id}) }}">
                                <img class="card-img-top" src="https://pictures.bureauxapartager.com/381cb905-5ed1-4f57-b745-e04a8d8650df/-/resize/1540x/" alt="Card image cap">
                            </a>
                            <div class="card-body">
                                <a href="{{ path('room_show', {'id': room.id}) }}">
                                    <h2 class="card-title" style="font-size: 1.5rem;" data-toggle="tooltip" data-placement="top" title="{{ room.features ? room.features|join(', ') : '' }}">
                                        {{ room.name }}
                                    </h2>
                                </a>
                                <p class="card-text">
                                    <i class="fas fa-user" style="font-size:1.3rem"></i>&nbsp<sup style="font-size: 1rem;">{{ room.capacity }}</sup>
                                </p>
                                {% if is_granted('IS_AUTHENTICATED_FULLY') and is_granted('ROLE_ADMIN') %}
                                    <a href="{{ path('room_edit', {'id': room.id}) }}" class="btn btn-info" style="position:absolute;top:0;right:0;">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        <hr>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        var element = document.getElementById("room_search");
        var arrowUp = document.getElementById("arrowUp");
        var arrowDown = document.getElementById("arrowDown");
        function displaySearch(button) {
            if (element.style.display === 'none') {
                element.style.display = 'block';
                arrowUp.style.display = 'inline-block';
                arrowDown.style.display = 'none';
            } else {
                element.style.display = 'none';
                arrowUp.style.display = 'none';
                arrowDown.style.display = 'inline-block';
            }
        }
        function updateRooms() {
            var selectedFeatures = $('#featuresList').val();
            console.log(selectedFeatures);

            $('.roomCard').show();
            for(var i = 1; i < $('#roomList .roomCard').length + 1; i++){

                var element = $('#roomList .roomCard:nth-child(' + i + ')');
                var featuresByRoom = $('#roomList .roomCard:nth-child(' + i + ') .card-title').attr('data-original-title');
                //var featuresByRoom = element.$('.card-title').attr('data-original-title');
                featuresByRoom = featuresByRoom.split(', ');

                if(findRoomWithThisFeatures(selectedFeatures, featuresByRoom)){
                    console.log(element);
                } else {
                    element.hide();
                };
            }
        }
        function initSearch() {
            var capacity = document.getElementById("roomCapacitySelect").options;
            capacity[0].selected = true;

            var features = document.getElementById("featuresList").options;
            for(var i = 0; i < features.length; i++){
                features[i].selected = false;
            }
            $('.roomCard').show();
            console.log('init');
        }
        var findRoomWithThisFeatures = function (haystack, arr) {
            return haystack.every(o => arr.includes(o));
        };
    </script>
{% endblock %}
