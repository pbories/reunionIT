{% extends 'layout.html.twig' %}

{% block title %}Nos salles{% endblock %}

{% block content %}
    <div class="jumbotron col-md-9 mx-auto">
        <h1 class="display-3">Nos salles de réunion</h1>
        <hr>
            <div class="row text-center">
                {% for room in rooms %}
                    <div class="col-lg-3 col-md-6 mb-4">
                        <div class="card mb-3" style="max-width: 18rem;">
                            <img class="card-img-top" src="https://pictures.bureauxapartager.com/381cb905-5ed1-4f57-b745-e04a8d8650df/-/resize/1540x/" alt="Card image cap">
                            <div class="card-body">
                                <h2 class="card-title">{{ room.name }}</h2>
                                <p class="card-text">{{ room.features ? room.features|join(', ') : '' }}</p>
                                <a href="{{ path('room_show', {'id': room.id}) }}" class="btn btn-info">Voir</a>
                                <a href="{{ path('room_edit', {'id': room.id}) }}" class="btn btn-info">Modifier</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        <hr>
        <p class="lead mx-auto">
            <a class="btn btn-primary btn-lg" href="{{ path('room_new') }}" role="button">Créer une nouvelle salle</a>
        </p>
    </div>



{% endblock %}
