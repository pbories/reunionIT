{% extends 'layout.html.twig' %}

{% block page_title %}Salle {{ room.name }}{% endblock %}

{% block content %}

    <div class="jumbotron col-md-6 mx-auto">

        <h1>Salle {{ room.name }}</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Capacit√©</th>
                    <td>{{ room.capacity }}</td>
                </tr>
                <tr>
                    <th>Options</th>
                    <td>{{ room.features ? room.features|join(', ') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <div style="position: relative;">
            <button type="button" class="btn btn-info"><a href="{{ path('room_edit', {'id': room.id}) }}" style="color: #fff;">Modifier</a></button>
            <button type="button" class="btn btn-info"><a href="{{ path('room_index') }}" style="color: #fff;">Retour aux salles</a></button>
            {{ include('room/_delete_form.html.twig') }}
        </div>
    </div>

{% endblock %}
