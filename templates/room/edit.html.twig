{% extends 'layout.html.twig' %}

{% block page_title %}{{ room.name }}{% endblock %}

{% block content %}

    <div class="jumbotron col-md-6 mx-auto">

        <h1>Modifier la salle {{ room.name }}</h1>

        {{ form_start(form) }}

        {{ form_row(form.name) }}
        {{ form_row(form.capacity) }}

        <div class="form-group">
        {{ form_label(form.features) }}
                {% set salle = form.vars.value %}
                {% for feature in form.features %}
                    {{ form_widget(feature) }}
                {% endfor %}
        </div>
        {{ form_errors(form.features) }}

        <button class="btn btn-primary" style="margin-top: 20px;">Mettre à jour</button>

        <button type="button" class="btn btn-primary" style="margin-top: 20px;"><a href="{{ path('room_index') }}" style="color: #fff;">Retour à la liste</a></button>
        {{ form_end(form) }}
        <form method="post"
              action="{{ path('room_delete', {'id': room.id}) }}"
              onsubmit="return confirm('Confirmez-vous la suppression de la salle ?');"
              style="position: relative;float: right;bottom: 38px;">
            <input type="hidden" name="_method" value="DELETE">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ room.id) }}">
            <button class="btn btn-warning">Supprimer</button>
        </form>

    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

{% endblock %}
